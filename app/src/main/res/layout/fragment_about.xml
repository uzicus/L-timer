        <TextView
            android:id="@+id/aboutSubHeader5_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="@string/about_sub_header5_1"
            android:textColor="?colorPrimary"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/endGuideline"
            app:layout_constraintStart_toStartOf="@+id/subHeaderGuideline"
            app:layout_constraintTop_toBottomOf="@+id/aboutHeader5"/>

        <TextView
