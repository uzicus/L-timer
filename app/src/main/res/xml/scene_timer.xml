<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        app:constraintSetEnd="@id/timerReadyState"
        app:constraintSetStart="@id/timerEmptyState"
        app:duration="500"/>

    <Transition
        app:constraintSetEnd="@id/timerEnteringState"
        app:constraintSetStart="@id/timerReadyState"
        app:duration="500"/>

    <Transition
        app:constraintSetEnd="@id/timerRecordingState"
        app:constraintSetStart="@id/timerEnteringState"
        app:duration="500"/>

    <Transition
        app:constraintSetEnd="@id/timerRecordingPulseState"
        app:constraintSetStart="@id/timerRecordingState"
        app:duration="300"/>

    <Transition
        app:constraintSetEnd="@id/timerRecordingState"
        app:constraintSetStart="@id/timerRecordingPulseState"
        app:duration="200"/>

    <Transition
        app:constraintSetEnd="@id/timerSavingState"
        app:constraintSetStart="@id/timerRecordingState"
        app:duration="600">

        <KeyFrameSet>

            <KeyPosition
                app:framePosition="40"
                app:keyPositionType="deltaRelative"
                app:percentX="0.5"
                app:percentY="0"
                app:target="@id/button"/>

            <KeyAttribute
                android:alpha="1"
                app:framePosition="90"
                app:target="@id/button"/>

            <KeyPosition
                app:framePosition="40"
                app:keyPositionType="deltaRelative"
                app:percentX="0.5"
                app:percentY="0"
                app:target="@id/taskText"/>

            <KeyAttribute
                android:alpha="0"
                app:framePosition="40"
                app:target="@id/taskText"/>

            <KeyAttribute
                android:alpha="0"
                app:framePosition="10"
                app:target="@id/timerText"/>

            <KeyAttribute
                android:alpha="0"
                app:framePosition="10"
                app:target="@id/stopText"/>

        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/timerEmptyState">

        <Constraint
            android:id="@+id/taskNameLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/middleVerticalGuideline"
            app:layout_constraintEnd_toStartOf="@+id/centerGuideline"
            app:layout_constraintStart_toStartOf="@+id/startGuideline"
            app:layout_constraintTop_toTopOf="parent"/>

        <Constraint
            android:id="@+id/button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/middleVerticalGuideline"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="@dimen/timer_button_normal_width_percent"/>

        <Constraint
            android:id="@+id/addTaskText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/button"
            app:layout_constraintEnd_toEndOf="@+id/button"
            app:layout_constraintStart_toStartOf="@+id/button"
            app:layout_constraintTop_toTopOf="@+id/button"/>

        <Constraint
            android:id="@+id/startText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/button"
            app:layout_constraintEnd_toEndOf="@+id/button"
            app:layout_constraintStart_toStartOf="@+id/button"
            app:layout_constraintTop_toTopOf="@+id/button"/>

        <Constraint
            android:id="@+id/timerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/stopText"
            app:layout_constraintEnd_toEndOf="@+id/button"
            app:layout_constraintStart_toStartOf="@+id/button"
            app:layout_constraintTop_toTopOf="@+id/button"
            app:layout_constraintVertical_chainStyle="packed"/>

        <Constraint
            android:id="@+id/stopText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/button"
            app:layout_constraintEnd_toEndOf="@+id/button"
            app:layout_constraintStart_toStartOf="@+id/button"
            app:layout_constraintTop_toBottomOf="@+id/timerText"/>

    </ConstraintSet>

