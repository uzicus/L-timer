<resources>

    <style name="AppTheme" parent="Base.V21.AppTheme"/>

    <style name="Base.V21.AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:statusBarColor">@color/black_translucent_50</item>
        <item name="android:windowBackground">@android:color/white</item>

        <item name="android:colorEdgeEffect">@android:color/white</item>
        <item name="android:colorControlNormal">@color/colorControlNormal</item>
        <item name="android:colorControlActivated">@color/colorControlActivated</item>

        <item name="android:textColorHint">?android:colorControlNormal</item>
        <item name="android:textViewStyle">@style/AppTextViewStyle</item>

        <item name="android:buttonStyle">@style/AppButtonStyle</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>
    
    <style name="AppTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="AppButtonStyle" parent="android:Widget.Button">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
